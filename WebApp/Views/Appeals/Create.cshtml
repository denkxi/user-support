@model WebApp.Domain.Appeal

@{
    ViewData["Title"] = "Create appeal";
}

<div class="w-75 m-auto mt-5">
    <h2 class="m-auto text-center">Create New Appeal</h2>

    <form asp-action="Create" class="w-50 m-auto">
        <div class="form-group my-1 mt-3">
            <label asp-for="Description" class="control-label">Description:</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group my-1">
            <label asp-for="ResolutionDeadline" class="control-label">Resolution Deadline:</label>
            <input asp-for="ResolutionDeadline" type="datetime-local" class="form-control"/>
            <span asp-validation-for="ResolutionDeadline" class="text-danger"></span>
        </div>
        <div class="mt-2">
            <button type="submit" class="btn btn-outline-primary">Create</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </form>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}